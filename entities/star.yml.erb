---
"$schema": http://json-schema.org/draft-04/hyper-schema
title: Star
description: A Star indicates whether a project is starred.
stability: prototype
strictProperties: true
type:
- object

definitions:
  id:
    description: unique identifier of star
    readOnly: true
    format: uuid
    type:
    - string

  starred:
    description: indicates that the project is starred
    readOnly: true
    type:
    - boolean

  url:
    description: a link to the star in API
    example: "https://semaphoreci.com/api/internal/{project_owner_name}/{project_name}/star"
    readOnly: true
    type:
    - string

  identity:
    anyOf:
    - "$ref": "/schemata/star#/definitions/id"


links:
- description: Check whether you have starred the project.
  href: "/<%= identity(:owner, :project) %>/star"
  method: GET
  rel: self
  title: Info

- description: Star the project.
  href: "/<%= identity(:owner, :project) %>/star"
  method: PUT
  rel: create
  title: Star

- description: Unstar the project.
  href: "/<%= identity(:owner, :project) %>/star"
  method: DELETE
  rel: destroy
  title: Unstar


properties:
  starred:
    "$ref": "/schemata/star#/definitions/starred"
  url:
    "$ref": "/schemata/star#/definitions/url"

id: schemata/star
