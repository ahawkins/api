---
"$schema": http://json-schema.org/draft-04/hyper-schema
title: Commit
description: Represents a commit.
stability: prototype
strictProperties: true
type:
- object
definitions:
  id:
    description: unique identifier of commit
    readOnly: true
    format: uuid
    type:
    - string

  identity:
    anyOf:
    - "$ref": "/schemata/commit#/definitions/id"

  sha:
    description: the SHA of the commit
    readOnly: true
    type:
    - string

  message:
    description: commit message
    example: "Fix all the bugs"
    readOnly: true
    type:
    - string

  author_name:
    description: name of the author
    example: "Monalisa Octocat"
    readOnly: true
    type:
    - string

  author_email:
    description: email address of the author
    example: "support@github.com"
    readOnly: true
    type:
    - string

  url:
    description: a link to the commit on repo host service
    example: "https://api.github.com/repos/octocat/Hello-World/git/trees/691272480426f78a0138979dd3ce63b77f706feb"
    readOnly: true
    type:
      - string

  created_at:
    description: when commit was created
    format: date-time
    type:
    - string

  updated_at:
    description: when commit was updated
    format: date-time
    type:
    - string

links: []

properties:
  id:
    "$ref": "/schemata/commit#/definitions/id"
  sha:
    "$ref": "/schemata/commit#/definitions/sha"
  message:
    "$ref": "/schemata/commit#/definitions/message"
  author_name:
    "$ref": "/schemata/commit#/definitions/author_name"
  author_email:
    "$ref": "/schemata/commit#/definitions/author_email"
  url:
    "$ref": "/schemata/commit#/definitions/url"
  created_at:
    "$ref": "/schemata/commit#/definitions/created_at"
  updated_at:
    "$ref": "/schemata/commit#/definitions/updated_at"

id: schemata/commit
