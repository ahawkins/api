---
"$schema": http://json-schema.org/draft-04/hyper-schema
title: PublicSshKey
description: User's public SSH key on Semaphore
stability: prototype
strictProperties: true
type:
- object

definitions:
  id:
    description: unique identifier of a public SSH key
    readOnly: true
    type:
    - integer

  name:
    description: public SSH key's name
    example: "devbox"
    readOnly: true
    type:
    - string

  fingerprint:
    description: public SSH key's MD5 hash
    example: "ff:16:5d:bf:09:25:9b:a2:ae:cc:19:49:bc:87:7b:e9"
    readOnly: true
    type:
    - string

  identity:
    anyOf:
    - "$ref": "/schemata/public_ssh_key#/definitions/id"


links:
- description: List user's public SSH keys
  href: "/<%= identity(:owner) %>/public_ssh_keys"
  method: GET
  rel: instances
  title: List

properties:
  id:
    "$ref": "/schemata/public_ssh_key#/definitions/id"
  name:
    "$ref": "/schemata/public_ssh_key#/definitions/name"
  fingerprint:
    "$ref": "/schemata/public_ssh_key#/definitions/fingerprint"

id: schemata/public_ssh_key
