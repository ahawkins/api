---
"$schema": http://json-schema.org/draft-04/hyper-schema
title: TestBoosterOptions
description: Options available to choose for Test Booster
stability: prototype
strictProperties: true
type:
- object

definitions:
  identity:
    anyOf:
    - "$ref": "/schemata/test_booster#/definitions/type"

  type:
    description: framework name
    readOnly: true
    type:
    - string

  size:
    description: potential size
    readOnly: true
    type:
    - integer

  estimated_duration:
    description: estimated duration in seconds
    readOnly: true
    type:
    - integer

  available_on_current_plan:
    description: can user choose option, based on plan
    readOnly: true
    type:
    - boolean

  suggested_plan:
    description: suggested plan, based on size
    readOnly: true
    type:
    - string

  price_diff:
    description: price difference between current plan and suggested one
    readOnly: true
    type:
    - integer

links:
- description: List all test boosters for the project.
  href: "/<%= identity(:owner) %>/<%= identity(:project) %>/test_booster_options"
  method: GET
  rel: instances
  title: List for Project

properties:
  type:
    "$ref": "/schemata/test_booster_options#/definitions/type"
  size:
    "$ref": "/schemata/test_booster_options#/definitions/size"
  estimated_duration:
    "$ref": "/schemata/test_booster_options#/definitions/estimated_duration"
  available_on_current_plan:
    "$ref": "/schemata/test_booster_options#/definitions/available_on_current_plan"
  suggested_plan:
    "$ref": "/schemata/test_booster_options#/definitions/suggested_plan"
  price_diff:
    "$ref": "/schemata/test_booster_options#/definitions/price_diff"

id: schemata/test_booster_options
