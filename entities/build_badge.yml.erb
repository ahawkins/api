---
"$schema": http://json-schema.org/draft-04/hyper-schema
title: BuildBadge
description: A build badge is a set of embeddable code options for displaying build status of a Semaphore project
stability: prototype
strictProperties: true
type:
- object

definitions:
  identity:
    anyOf:
    - "$ref": "/schemata/build_badge#/definitions/markdown"
    - "$ref": "/schemata/build_badge#/definitions/html"
    - "$ref": "/schemata/build_badge#/definitions/textile"
    - "$ref": "/schemata/build_badge#/definitions/svg"

  type:
    description: Badge style
    readOnly: true
    example: "semaphore"
    type:
      - string
    enum:
      - semaphore
      - shield

  markdown:
    description: A markdown version of the badge
    example: "[![Build Status](https://semaphoreci.com/api/v1/projects/123/456/badge.svg)](https://semaphoreci.com/j-keravica/color-reader)"
    readOnly: true
    type:
    - string

  html:
    description: An HTML version of the badge
    example: "<a href='https://semaphoreci.com/j-keravica/color-reader'> <img src='https://semaphoreci.com/api/v1/projects/123/456/badge.svg' alt='Build Status'></a>"
    readOnly: true
    type:
    - string

  textile:
    description: A textile version of the badge
    example: "!https://semaphoreci.com/api/v1/projects/123/456/badge.svg(Build Status)!:https://semaphoreci.com/j-keravica/color-reader"
    readOnly: true
    type:
    - string

  svg:
    description: An SVG version of the badge
    example: "https://semaphoreci.com/api/v1/projects/123/456/badge.svg"
    readOnly: true
    type:
    - string

links:
- description: Get a list of badges for all branches
  href: "/<%= identity(:owner, :project) %>/badges"
  method: GET
  rel: self
  title: List badges ✖

- description: Get a list of badges for a branch
  href: "/<%= identity(:owner, :project) %>/branches/<%= identity(:branch) %>/badges"
  method: GET
  rel: self
  title: List badges for branch ✖

properties:
  type:
    "$ref": "/schemata/build_badge#/definitions/type"
  markdown:
    "$ref": "/schemata/build_badge#/definitions/markdown"
  html:
    "$ref": "/schemata/build_badge#/definitions/html"
  textile:
    "$ref": "/schemata/build_badge#/definitions/textile"
  svg:
    "$ref": "/schemata/build_badge#/definitions/svg"

id: schemata/build_badge
