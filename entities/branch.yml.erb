---
"$schema": http://json-schema.org/draft-04/hyper-schema
title: Branch
description: Represents a branch.
stability: prototype
strictProperties: true
type:
- object

definitions:
  id:
    description: unique identifier of branch
    readOnly: true
    format: uuid
    type:
    - string

  name:
    description: name of branch
    readOnly: true
    type:
    - string

  identity:
    anyOf:
    - "$ref": "/schemata/branch#/definitions/name"

  url:
    description: a link to the branch in API
    example: "https://semaphoreci.com/api/internal/{project_owner_name}/{project_name}/branch/{branch_name}"
    readOnly: true
    type:
      - string

  html_url:
    description: a link to the branch in applicaiton
    example: "https://semaphoreci.com/{project_owner_name}/{project_name}/branch/{branch_name}"
    readOnly: true
    type:
      - string

  project_url:
    description: a link to the project in API
    example: "https://semaphoreci.com/api/internal/{project_owner_name/{project_name}"
    readOnly: true
    type:
      - string

  project_html_url:
    description: a link to the project in application
    example: "https://semaphoreci.com/{project_owner_name/{project_name}"
    readOnly: true
    type:
      - string

  rebuild_url:
    description: a link to the branch rebuild action
    example: "https://semaphoreci.com/api/internal/{project_owner_name}/{project_name}/branch/{branch_name}/rebuild"
    readOnly: true
    type:
      - string

  created_at:
    description: when branch was created
    format: date-time
    type:
    - string

  updated_at:
    description: when branch was updated
    format: date-time
    type:
    - string

links:
- description: List existing branches.
  href: "/<%= identity(:owner, :project) %>/branches"
  method: GET
  rel: instances
  title: List ✖

- description: Info for existing branch.
  href: "/<%= identity(:owner, :project) %>/branches/<%= identity(:branch) %>"
  method: GET
  rel: self
  title: Info ✖

- description: Re-build last revision for existing branch.
  href: "/<%= identity(:owner, :project) %>/branches/<%= identity(:branch) %>/rebuild"
  method: POST
  rel: self
  title: Rebuild ✖

properties:
  id:
    "$ref": "/schemata/branch#/definitions/id"
  name:
    "$ref": "/schemata/branch#/definitions/name"
  last_build:
    "$ref": "/schemata/build"
  url:
    "$ref": "/schemata/branch#/definitions/url"
  html_url:
    "$ref": "/schemata/branch#/definitions/html_url"
  project_url:
    "$ref": "/schemata/branch#/definitions/project_url"
  project_html_url:
    "$ref": "/schemata/branch#/definitions/project_html_url"
  rebuild_url:
    "$ref": "/schemata/branch#/definitions/rebuild_url"
  created_at:
    "$ref": "/schemata/branch#/definitions/created_at"
  updated_at:
    "$ref": "/schemata/branch#/definitions/updated_at"

id: schemata/branch
