<% require_relative "templates/entities/entity_helper.rb" %>

#<%= @entity %>

<% @resources.to_a.each do |resource| %>
  <% resource.methods.each do |method| %>
##<%= method.raw["description"] %>

    <%= method.raw["method"] %> `<%= resource_path(resource) %>`


    <% if method.properties.any? %>
###Params:

<%= properties_table(method.properties) %>
    <% end %>


    <% if method.responses.any? %>
###Responses:

      <% only_20x(method.responses).each do |response| %>
####Status: <%= full_http_code(response.raw["code"]) %>

        <% if response.properties.any? %>
<%= properties_table(response.properties) %>
        <% end %>

      <% end %>
    <% end %>


  <% end %>
<% end %>
